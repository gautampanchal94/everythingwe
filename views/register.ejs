<%- include('partials/header') %>

<div class="w-full container bg-slate-100">
    <div class="min-h-screen flex flex-col items-center justify-center text-center">
        <div class="bg-white w-11/12 sm:w-7/12 md:6/12 xl:4/12 p-8 shadow divide-y divide-slate-400">
            
            <!-- register -->
            <div class="form mb-3">
                <h1 class="text-xl sm:text-2xl md:text-3xl text-sky-500 text-bold">
                    Create Account
                </h1>
                <form action="/register" method="post">
                    <div class="m-2 text-left">
                          <label for="name" class="block text-sm sm:text-base after:content-['*'] after:ml-0.5 after:text-red-500">Name</label>
                          <input type="text" name="name" id="name" class="input" placeholder="John Doe" required>
                    </div>
                    <div class="m-2 text-left">
                        <label for="email" class="block text-sm sm:text-base after:content-['*'] after:ml-0.5 after:text-red-500">Email</label>
                        <input type="email" name="username" id="email" class="input" placeholder="johndoe@example.com" required>
                        <p class="text-xs md:text-sm text-gray-400">&ast;We will not share your email</p>
                    </div>
                    <div class="m-2 text-left">
                        <label for="password" class="block text-sm sm:text-base after:content-['*'] after:ml-0.5 after:text-red-500">Password</label>
                        <input type="password" name="password" id="password" class="input" placeholder="Password" required>

                        <% if(messages) { %>
                            <% messages.forEach(function(message) { %>
                               <p class="text-red-500 text-xs md:text-sm"><%=message.message%></p> 
                            <% }) %>
                        <% } %>
                        
                    </div>

                    <% if(registeredAlert){ %>
                        <p class="text-red-500 text-sm md:text-base mb-3"><%= registeredAlert %></p>
                    <% }%>

                    <button type="submit" class="btn-primary">Create Account</button>
                </form>
                <p class="mt-3 text-gray-500 text-xs md:text-sm">Already have an account? <a href="./login" class="text-sky-500 font-medium">Sign In</a></p>
            </div>

            <!-- Google -->
            <!-- <div class="Oauth mt-3">
                <button class="btn-secondary flex items-center justify-center">
                    <i class='bx bxl-google bx-sm mx-1'></i>
                    <span class="hidden sm:block text-sm md:text-lg">Sign up with Google</span>
                </button>
            </div> -->
        </div>
    </div>
</div>

<%- include('partials/footer') %>