<%- include('partials/header') %>
  <%- include('components/navbar',{isLoggedIn:isLoggedIn,home:true,wishlist:false,history:false,faq:false,pricing:false}) %>

    <div x-data="{}" class="flex-grow min-h-screen">
      <div class="container mx-auto w-full">
        <% if(isLoggedIn){ %>
          <% homeContent.forEach(function(doc){%>
            <div class="container text-center">
              <div
                class="bg-contain bg-no-repeat bg-center h-96 md:h-[30rem] flex flex-col justify-center items-center space-y-5"
                style="
                  background-image: url(https://res.cloudinary.com/everythingwecloud/image/upload/v1643657346/pawel-czerwinski-IKZg31SuNqU-unsplash_miczbj.jpg);
                  ">
                <h1 class="text-4xl md:text-5xl font-bold text-white px-5 md:px-9">
                  <%=doc.homeContent.pageTitle.title%>
                </h1>
                <p class="font-serif text-white italic text-lg w-64 md:w-96 md:text-xl px-5 md:px-9">
                  <%=doc.homeContent.pageTitle.content%>
                </p>
              </div>
              <div class="h-56 flex flex-col justify-center items-center space-y-3">
                <h2 class="text-2xl md:text-4xl font-bold text-cordovan px-5 md:px-9">
                  <%=doc.homeContent.firstSubHeading.title%>
                </h2>
                <p class="font-serif text-lg md:text-xl px-5 md:px-9 italic">
                  <%=doc.homeContent.firstSubHeading.content%>
                </p>
              </div>
              <div class="h-56 flex flex-col justify-center items-center space-y-3">
                <h2 class="text-2xl md:text-4xl font-bold text-cordovan px-5 md:px-9">
                  <%=doc.homeContent.lastSubHeading.title%>
                </h2>
                <p class="font-serif text-lg md:text-xl px-5 md:px-9 italic">
                  <%=doc.homeContent.lastSubHeading.content%>
                </p>
              </div>
            </div>
            <%})%>
              <% } else{ %>
                <div class="container text-center">
                  <div
                    class="bg-cover bg-origin-padding bg-no-repeat bg-center h-96 md:h-[30rem] flex flex-col justify-center items-center space-y-5"
                    style="
          background-image: url(https://res.cloudinary.com/everythingwecloud/image/upload/o_95/v1643657346/pawel-czerwinski-IKZg31SuNqU-unsplash_miczbj.jpg);
        ">
                    <h1 class="text-4xl md:text-5xl font-bold text-white px-5 md:px-9">
                      Everything WE
                    </h1>
                    <p class="font-serif text-white italic text-lg w-64 md:w-96 md:text-xl px-5 md:px-9">
                      a digital memorial diary gift of you and your closed with all your
                      cherished and joyous moments
                    </p>
                  </div>
                  <div class="h-56 flex flex-col justify-center items-center space-y-3">
                    <h2 class="text-2xl md:text-4xl font-bold text-cordovan px-5 md:px-9">
                      Project Mission
                    </h2>
                    <p class="font-serif text-lg md:text-xl px-5 md:px-9 italic">
                      To never let a moment go un-noticed
                    </p>
                  </div>
                  <div class="h-56 flex flex-col justify-center items-center space-y-3">
                    <h2 class="text-2xl md:text-4xl font-bold text-cordovan px-5 md:px-9">
                      Inside Everything We
                    </h2>
                    <p class="font-serif text-lg md:text-xl px-5 md:px-9 italic">
                      Make a virtual space for your partner where you can add memories and
                      highlights of you and let them know that there is no-one other than
                      them in your universe.
                    </p>
                  </div>
                </div>
                <% } %>
      </div>
    </div>
    <%- include('components/bottom-bar') %>
    <%- include('partials/footer') %>