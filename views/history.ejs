<%- include('components/navbar',{isLoggedIn:isLoggedIn,home:false,wishlist:false,history:true,faq:false}) %>

<div class="flex-grow" x-data="{ modify: false }">
    
    <div class="container mt-6">
        <h1 class="page-title">
            You and me had a whole lot of history
        </h1>
        <div class="container mx-auto mt-8 w-11/12 lg:w-3/4 text-center">
