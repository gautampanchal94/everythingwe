<%- include('partials/header') %>

<div class="container bg-slate-100">
    <div class="min-h-screen flex flex-col items-center justify-center text-center">
        <div x-data class="bg-white w-5/6 md:w-2/5 p-5 md:p-8 shadow">
            <!-- post --> 
            <% homeContent.forEach(function(users){%>
            <div class="mb-3">
                <h6 class="text-3xl text-sky-500 text-bold">
                    <!-- <i class='mx-2 block bx bxs-edit bx-md'></i> -->
                    <svg class="fill-sky-500 w-12 h-12 mx-auto" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="m7 17.013 4.413-.015 9.632-9.54c.378-.378.586-.88.586-1.414s-.208-1.036-.586-1.414l-1.586-1.586c-.756-.756-2.075-.752-2.825-.003L7 12.583v4.43zM18.045 4.458l1.589 1.583-1.597 1.582-1.586-1.585 1.594-1.58zM9 13.417l6.03-5.973 1.586 1.586-6.029 5.971L9 15.006v-1.589z"></path><path d="M5 21h14c1.103 0 2-.897 2-2v-8.668l-2 2V19H8.158c-.026 0-.053.01-.079.01-.033 0-.066-.009-.1-.01H5V5h6.847l2-2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2z"></path></svg>
                    <span>Customize Home</span>
                </h6>
                <!-- Add Post -->
                <form action="/update-home" method="POST" class="">
                    <div class="m-2 text-left">
                        <label for="pageTitle" class="block after:content-['*'] after:ml-0.5 after:text-red-500">Page Title</label>
                        <input type="text" name="pageTitle" id="pageTitle" class="input" value="<%=users.homeContent.pageTitle.title%>" required>
                    </div>
                    <div class="m-2 text-left">
                        <label for="pageContent" class="block after:content-['*'] after:ml-0.5 after:text-red-500">Page tagline</label>
                        <input type="text" name="pageContent" id="pageContent" class="input" value="<%=users.homeContent.pageTitle.content%>" required>
                    </div>
                    <div class="m-2 text-left">
                        <label for="headFirst" class="block after:content-['*'] after:ml-0.5 after:text-red-500">Heading 1</label>
                        <input type="text" name="headFirst" id="headFirst" class="input" value="<%=users.homeContent.firstSubHeading.title%> "required>
                    </div>
                    <div class="m-2 text-left">
                        <label for="bodyFirst" class="block after:content-['*'] after:ml-0.5 after:text-red-500">Heading 1 tagline</label>
                        <input type="text" name="bodyFirst" id="bodyFirst" class="input" value="<%=users.homeContent.firstSubHeading.content%>" required>
                    </div>
                    <div class="m-2 text-left">
                        <label for="headLast" class="block after:content-['*'] after:ml-0.5 after:text-red-500">Heading 2</label>
                        <input type="text" name="headLast" id="headLast" class="input" value="<%=users.homeContent.lastSubHeading.title%>" required>
                    </div>
                    <div class="m-2 text-left">
                        <label for="bodyLast" class="block after:content-['*'] after:ml-0.5 after:text-red-500">Heading 2 tagline</label>
                        <input type="text" name="bodyLast" id="bodyLast" class="input" value="<%=users.homeContent.lastSubHeading.content%>" required>
                    </div>
                    <button type="submit" class="btn-primary">Update Home</button>
                </form>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>