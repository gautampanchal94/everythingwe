<%- include('partials/header') %>

<div class="container bg-slate-100">
    <div class="min-h-screen flex flex-col items-center justify-center text-center">
        <div class="bg-white w-5/6 md:w-2/5 xl:3/5  p-8 shadow divide-y divide-slate-400 ">
            <!-- login -->
            <div class="form mb-3">
                <h6 class="text-3xl text-sky-500 text-bold">Sign In</h6>
                <form class="" action="/login" method="post">
                    <div class="m-2 text-left">
                        <label class="block text-sm sm:text-base" for="username">Email</label>
                        <input class="input" type="text" name="username" id="username" placeholder="Email" required>
                    </div>
                    <div class="m-2 text-left">
                        <label class="block text-sm sm:text-base" for="password">Passwords</label>
                        <input class="input" type="password" name="password" id="password" placeholder="Password" required>
                    </div>

                    <!-- flash message -->
                    <% if(messages){ %>
                        <p class="text-red-500 text-sm mb-3"><%= messages %></p>
                    <% } %>

                    <button class="btn-primary" type="submit">Sign In</button>
                </form>
            </div>
            <!-- Google Oauth -->
            <div class="mt-3">
                <a href="/register">
                    <button class="btn-secondary">
                        Create Account
                    </button>
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
